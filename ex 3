
// Розробіть кальулятор, використовуючи prompt() та змінні. Розробіть программу, яка виконує наступне:
// 1. Prompts the user for first number.
// 1. Запитує користувача про перший номер
// 2. Зберігає цей номер
// 3. Запитує користувача про другий номер
// 4. Зберігає другий номер та дає відповідь з сумою двох чисел за допомогою alert()

let One = Number(prompt('Введіть перший номер', ));
let Two = Number(prompt('Введіть другий номер', ));
alert(One + Two);


// Додатково: Зробіть програму, яка може ділити, множити, та віднімати ці два номери


let One = Number(prompt("Введіть перший номер"));
        let Two = Number(prompt ("Введіть другий номер"));
        let choose = prompt("Виберіть математичний оператор  + - *  /");
        if(choose == "+"){
            alert("Результат суми двох чисел " + (One+Two));
        }else if(choose == "*"){
            alert("Результат множення двох чисел " + (One*Two));
        }else if(choose == "-"){
            alert("Результат віднімання двох чисел " + (One-Two));
        }else if(choose == "/"){
            alert("Результат ділення двох чисел " + (One/Two));
        }else{
            alert ("Спробуйте знову");
        }
